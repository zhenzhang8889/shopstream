<nav class="top-bar">
  <ul>
    <li class="name">
      <h1>
        <a {{action goToIndex href=true}}>ShopStream</a>
      </h1>
    </li>
    <li class="toggle-topbar"><a href="#"></a></li>
  </ul>
  <section>
    <ul class="left">
      <li class="divider show-for-medium-and-up"></li>

      {{#if isShop}}
        <li><a {{action goToDashboard href=true}}>Dashboard</a></li>
        <li><a {{action goToFeed href=true}}>Feed</a></li>
        <li><a {{action goToSettings href=true}}>Settings</a></li>
      {{/if}}
    </ul>

    <ul class="right">
      <li class="divider show-for-medium-and-up"></li>
      <li class="has-dropdown">
        <a href="#">
          {{#if isShop}}{{name}}{{else}}Choose shop...{{/if}}
        </a>
        <ul class="dropdown">
          {{#if SS.user.shops}}
            {{#each shop in SS.user.shops}}
              <li><a {{action goToDashboard shop href=true}}>{{shop.name}}</a></li>
            {{/each}}
            <li class="divider"></li>
          {{/if}}
          <li><a {{action goToAddShop href=true}}>Add shop...</a></li>
        </ul>
      </li>
      <li class="divider show-for-medium-and-up"></li>
      <li class="has-dropdown">
        <a href="#">{{SS.user.email}}</a>
        <ul class="dropdown">
          <li><a href="/users/sign_out" data-method="delete">Log out</a></li>
        </ul>
      </li>
    </ul>
  </section>
</nav>
