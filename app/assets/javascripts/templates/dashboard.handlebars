<div class="twelve columns">
  <div class="row">
    <div class="two columns metric">
      <h2>{{percentage conversionRate}}</h2>
      {{view SS.GaugeView numberBinding="conversionRate" maxNumberBinding="maxConversionRate"}}
      <h5 class="subheader"><strong>Conversion</strong> rate</h5>
      <h5 class="subheader short">30 day max <strong>{{percentage maxConversionRate}}</strong></h5>
    </div>
    <div class="two columns metric">
      <h2>{{money avgPurchase}}</h2>
      {{view SS.GaugeView numberBinding="avgPurchase" maxNumberBinding="maxAvgPurchase"}}
      <h5 class="subheader"><strong>Avg</strong> purchase</h5>
      <h5 class="subheader short">30 day max <strong>{{money maxAvgPurchase}}</strong></h5>
    </div>
    <div class="two columns metric">
      <h2>{{money totalSalesToday}}</h2>
      <h5 class="subheader"><strong>Total</strong> sales</h5>
      <h5 class="subheader short">Today</h5>
    </div>
    <div class="six columns chart">
      {{view SS.FlotChartView seriesBinding="checkoutDistributionSeries" optionsBinding="checkoutDistributionChartOptions" class="co-distr-chart"}}
    </div>
  </div>

  <div class="row content">
    {{view SS.DashboardTopColumnView title="Products" subtitle="past 2 days" topItemsBinding="topProducts" classNames="four"}}
    {{view SS.DashboardTopColumnView title="Links" subtitle="overall" topItemsBinding="topLinks" classNames="four"}}
    {{view SS.DashboardTopColumnView title="Searches" subtitle="overall" topItemsBinding="topSearches" classNames="four"}}
  </div>
</div>
