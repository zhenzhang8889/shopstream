<div id="password" style="display: block">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h3>Sign up</h3>

    <%= devise_error_messages! %>

    <div class="input username"><%= f.email_field :email, placeholder: 'Email' %></div>

    <div class="input"><%= f.password_field :password, placeholder: 'Password' %></div>

    <div class="input password"><%= f.password_field :password_confirmation, placeholder: 'Confirm' %></div>

    <div><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
