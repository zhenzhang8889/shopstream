<div class="row">
  <div class="seven columns">
    <h3>Edit profile</h3>

    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
      <%= render partial: 'layouts/flashes' %>
      <%= f.error_notification %>

      <%= f.input :email %>
      <%= f.input :name %>
      <%= f.input :password, placeholder: "leave blank if you don't want to change it" %>
      <%= f.input :password_confirmation %>
      <%= f.input :current_password %>

      <%= f.button :submit, 'Update my account', class: 'success' %>
    <% end %>
  </div>
  <div class="five columns">
    <h6>Need to cancel this account?</h6>
    <p>Once your account is deleted, all the information captured will be immediately and permanently deleted. If you have a paying account you won't be charged again but you are responsible for any charges already incurred.</p>

    <p>
      <b>I understand this is irreversible:</b>
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button tiny alert' %>
    </p>
  </div>
</div>
