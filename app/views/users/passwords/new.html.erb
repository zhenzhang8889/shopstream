<div class="row login">
  <div class="five columns centered panel devise-window">
    <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f| %>
      <h3>Forgot your password?</h3>
      <h4 class="subheader">Enter your email address below and weâ€™ll send you instructions.</h4>

      <%= render partial: 'layouts/flashes' %>
      <%= f.error_notification %>

      <%= f.input :email, label: false, placeholder: 'Email' %>

      <%= f.button :submit, 'Recover password' %>
    <% end %>

    <p>
      <%= link_to new_session_path(resource_name), class: 'small' do %>
        <i class="foundicon-left-arrow back"></i>
        back to login
      <% end %>
    </p>
  </div>
</div>
